<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingLeft="@dimen/card_padding"
	android:paddingRight="@dimen/card_padding">
	<android.support.v7.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:id="@+id/conteudo"
			android:background="@drawable/card"
			android:orientation="vertical"
			android:paddingLeft="@dimen/card_padding2"
			android:paddingRight="@dimen/card_padding2" >

			<aloogle.rebuapp.other.CustomTextView
				android:id="@+id/titulo"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textColor="#000000"
				android:layout_marginTop="@dimen/card_padding2"
				android:textSize="16sp"
				app:fontName="Roboto-Medium.ttf"
			/>

			<aloogle.rebuapp.other.CustomTextView
				android:id="@+id/descricao"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@+id/titulo"
				android:textColor="#000000"
				android:layout_marginTop="@dimen/card_padding2"
				app:fontName="Roboto-Regular.ttf"
			/>
		
			<com.gc.materialdesign.views.ButtonFlat
				android:id="@+id/delete"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Apagar"
				android:layout_alignParentRight="true"
				android:layout_below="@+id/descricao" />
			
			<com.gc.materialdesign.views.ButtonFlat
				android:id="@+id/edit"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Editar"
				android:layout_toStartOf="@+id/delete"
				android:layout_below="@+id/descricao" />
		</RelativeLayout>
	</android.support.v7.widget.CardView>
</RelativeLayout>
